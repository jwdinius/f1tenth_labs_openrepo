    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build f1tenth_gym_ros simulation",
            "type": "shell",
            "command": "colcon build --packages-up-to f1tenth_gym_ros"
        },
        {
            "label": "Source the workspace",
            "type": "shell",
            "command": "source install/setup.bash"
        },
        {
            "label": "Run f1tenth_gym_ros simulation",
            "type": "shell",
            "command": "source install/setup.bash && ros2 launch f1tenth_gym_ros gym_bridge_launch.py",
            "dependsOn": ["Build f1tenth_gym_ros simulation", "Source the workspace"],
            "dependsOrder": "sequence"
        }
    ]
}